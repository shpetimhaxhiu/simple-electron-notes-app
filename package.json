{
  "name": "simple-electron-notes-app",
  "productName": "Simple Electron Notes App",
  "description": "A simple Electron application for taking and managing notes on the fly.",
  "version": "1.0.0",
  "author": "Shpetim Haxhiu <shpetim.h@gmail.com> (https://github.com/shpetimhaxhiu)",
  "repository": "https://github.com/shpetimhaxhiu/simple-electron-notes-app",
  "main": "main.js",
  "keywords": [
    "electron",
    "notes",
    "app",
    "simple",
    "desktop"
  ],
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.shpetimhaxhiu.simpleelectronnotesapp",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "app-icon.icns"
    },
    "win": {
      "icon": "app-icon.png"
    },
    "linux": {
      "icon": "app-icon.png"
    }
  },
  "dependencies": {
    "bootstrap": "5.2.3",
    "nedb": "1.8.0"
  },
  "devDependencies": {
    "electron": "24.0.0",
    "electron-builder": "22.13.1"
  },
  "license": "MIT"
}